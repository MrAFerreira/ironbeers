<div
  class='d-flex flex-column align-items-center justify-content-between h-100'
>
  <div class='text-center'>

    <h1>Hackshow</h1>

    <h2>Beer request form</h2>
    <hr />
    <h1>🍻🍺🍻🍺🍻</h1>
  </div>

  <form
    action='/request'
    method='post'
    class='d-flex flex-column align-items-center justify-content-center'
  >
    <div class='mb-3'>
      <label for='name' class='form-label'>Name</label>
      <input
        type='text'
        class='form-control'
        id='name'
        aria-describedby='nameHelp'
        name='name'
        placeholder='ex: Diogo'
      />
      <div id='nameHelp' class='form-text'>Enter your name</div>
    </div>
    <div class='mb-3 w-100'>
      <label for='type' class='form-label'>Type</label>
      <div class='d-flex align-items-center justify-content-around'>
        <div class='form-check'>
          <input
            class='form-check-input'
            type='radio'
            name='type'
            value='beer'
            id='beer'
          />
          <label class='form-check-label' for='beer'>
            Beer
          </label>
        </div>
        <div class='form-check'>
          <input
            class='form-check-input'
            type='radio'
            name='type'
            value='cider'
            id='cider'
          />
          <label class='form-check-label' for='cider'>
            Cider
          </label>
        </div>
      </div>
      <div id='amountHelp' class='form-text'>Select the type of beverage</div>
    </div>
    <div class='mb-3 w-100'>
      <label for='course' class='form-label'>Course</label>
      <div class='d-flex align-items-center justify-content-around'>
        <div class='form-check'>
          <input
            class='form-check-input'
            type='radio'
            name='course'
            value='webdev'
            id='webdev-course'
          />
          <label class='form-check-label' for='webdev-course'>
            Web Dev
          </label>
        </div>
        <div class='form-check'>
          <input
            class='form-check-input'
            type='radio'
            name='course'
            value='uxui'
            id='uxui-course'
          />
          <label class='form-check-label' for='uxui-course'>
            UX/UI
          </label>
        </div>
        <div class='form-check'>
          <input
            class='form-check-input'
            type='radio'
            name='course'
            value='data'
            id='data-course'
          />
          <label class='form-check-label' for='data-course'>
            Data
          </label>
        </div>
      </div>
      <div id='amountHelp' class='form-text'>Select your course</div>
    </div>
    <button type='submit' class='btn btn-success'>Submit</button>
  </form>

  <div class='d-flex justify-content-around'>
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </div>

  <div class='d-flex justify-content-around'>
    <img class='w-75' src='/images/ironhack-logo.png' alt='ironhack logo' />
  </div>
</div>